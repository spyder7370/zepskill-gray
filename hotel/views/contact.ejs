<%- include('./partials/header') %>
<%- include('./partials/navbar') %>
<h1 class="my-5 text-center">Contact Page</h1>
<div class="container">
    <div class="row">
        <div class="m-auto col-5">
            <form action="/contact" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="contact[name]">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="contact[email]">
                </div>
                <div class="form-floating">
                    <textarea name="contact[body]" class="form-control" placeholder="Leave a comment here"
                        id="floatingTextarea"></textarea>
                    <label for="floatingTextarea">Body</label>
                </div>
                <button type="submit" class="mt-4 btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>